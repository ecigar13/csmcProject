{# share individual start#}
<div class="modal fade" id="shareIndividualFolder" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ 'Select/Deselect a user to Share/Unshare'|trans }}</h4>
            </div>
            <div class="modal-body">
                <div style="display:inline-block">
                    <span class="type_select">
                        Share by:
                        <button type="button" class="user btn btn-default" data-type="user">User</button>
                        <button type="button" class="role btn btn-default" data-type="role">Role</button>
                    </span>
                    
                    <table class="user share_table display">
                        <thead>
                            <tr>
                                <th>Net ID</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in userArray %}
                            <tr data-type="user" data-id="{{user.id}}">
                                <td class="net_id">{{ user.username }}</td>
                                <td class="name">{{user.firstName}}Â·{{user.lastName}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <table class="role share_table display">
                        <thead>
                            <tr>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for role in roleArray %}
                            <tr data-type="role" data-id="{{role.id}}">
                                <td class="name">{{role.name}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left"
                        data-dismiss="modal">{{ 'button.cancel'|trans }}
                </button>
                <button type="button" class="share btn btn-primary btn">Submit</button>
            </div>
        </div>
    </div>
</div>
{# share individual end#}
