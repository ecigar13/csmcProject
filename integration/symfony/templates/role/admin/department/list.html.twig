{% extends "role/admin/base.html.twig" %}
{% block body %}
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List Departments</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr role="row">
                                <th>Name</th>
                                <th>Abbreviations</th>
                                <th>Admin Notes</th>
                                <th>Edit</th>
                            </thead>
                            <tbody>
                            {% for d in departments %}
                                <tr>
                                    <td>{{ d.name }}</td>
                                    <td>{{ d.abbreviation }}</td>
                                    <td>{{ d.adminNotes }}</td>
                                    <td>
                                        <a type="button" class="btn btn-success"
                                           href="{{ path('admin_department_edit', {'id': d.id}) }}">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
        {% block javascripts %}
            {{ parent() }}
            <script>
                $(function () {
                    var table = $('#datatable').DataTable({
                        searching: true,
                        ordering: true,
                        paging: true,
                    });
                });
            </script>
        {% endblock %}