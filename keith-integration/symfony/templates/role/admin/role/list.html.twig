{% extends "role/admin/base.html.twig" %}
{% block body %}

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <div class="x_title">
                    <div class="title_left">
                        <h3>Roles
                            <button type="button" class="btn btn-primary" onclick="location.href='./addNewRole'"
                                    style="float:right">New Role
                            </button>
                        </h3>
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="x_content">
                    <p class="text-muted font-13 m-b-30"></p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Description</th>
                            <th>Edit</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for r in roles %}
                            <tr>
                                <td>{{ r.name }}</td>
                                <td>{{ r.description }}</td>
                                <td>

                                    <button type="button" class="btn btn-round btn-success"
                                            onclick="location.href='./editRole?id={{ r.id }}'">Edit
                                    </button>
                                </td>

                            </tr>

                        {% endfor %}

                    </table>
                </div>

            </div>
        </div>
    </div>



{% endblock %}
     
     
     
