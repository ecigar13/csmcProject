{% extends "role/admin/base.html.twig" %}
{% block body %}
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <div class="title_left">
                        <h3>Roster for {{ section }}</h3>
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="x_content">
                    <p class="text-muted font-13 m-b-30"></p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>NetID</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for student in section.roster %}
                            <tr>
                                <td>{{ student.lastName }}</td>
                                <td>{{ student.firstName }}</td>
                                <td>{{ student.username }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            var table = $('#datatable').DataTable({
                searching: true,
                ordering: true,
                paging: true,
            });
        });
    </script>
{% endblock %}